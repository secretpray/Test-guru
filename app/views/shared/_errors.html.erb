<% if resource.present? && resource.errors.present? %>
  <%= content_tag :div, class: 'resource-error', data: {resource_id: resource.id} do %>
    <div id="errors" class="alert <%= bootstrap_class_for_flash(:error) %> shadow-soft" role="alert">
      <h4><%= t('.header', count: resource.errors.count) %>:</h4>
      <button id="button" type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li>
            <span><%= message %></span>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
