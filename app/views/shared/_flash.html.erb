<div class="container">
  <% flash.each do |type, message| %>
    <div class="alert <%= bootstrap_class_for_flash(type) %> alert-dismissible fade show mt-1" role="alert"><%= type.to_sym == :safe_notice ? message.html_safe : message %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
</div>
