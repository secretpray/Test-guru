<% flash.each do |type, message| %>
  <div id="alert" data-dismiss="alert" class="alert <%= bootstrap_class_for_flash(type) %> shadow-soft" role="alert">
    <span class="alert-inner--text">
      <%= type.to_sym == :safe_notice ? message.html_safe : message %>
    </span>
    <button id="button" type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>


