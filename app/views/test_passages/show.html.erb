<h1><%= t('.header') %>: "<%= @test_passage.test.title %>"</h1>

<p>
	 <%= t('.question') %> <%= @test_passage.current_question_number %> 
   <%= t('.from') %> <%= @test_passage.test.questions.count %>
</p>

<p>
 <b><%= t('.category') %>:</b> <%= @test_passage.test.category.title %><br>
 <b><%= t('.level') %>:</b> <%= test_level(@test_passage.test) %> (<%= @test_passage.test.level %>)<br>
</p>

<p>
	<b>
		<%= @test_passage.current_question.body %>
	</b>
</p>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
   </p>
  <% end %>

	<p><%= form.submit t('.next') %></p>
<% end %>
