<div class="forgot-password">
  <div class="text"><%= t('.title') %></div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group field mt-3">
        <i class="fa fa-user" aria-hidden="true"></i>
        <%= f.label :email, class: "hidden forgot-password-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "User email" %>
        <i class="fa fa-check" id="check2" aria-hidden="true"></i>
      </div>

      <div class="actions forgot-password-button mb-2">
        <%= f.submit t('.submit'), class: "custom-submit1" %>
      </div>

  <% end %>

    <div class="forgot-password-signup">
      <span> Not a member?</span>
      <span><%= link_to 'signup now', new_registration_path(resource_name) %></span>
    </div>

</div>
