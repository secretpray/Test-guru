<%= render 'shared/sidebar' %>


<div class="menu-icon" id="menu-icon-tl">
  <span></span>
  <span></span>
  <span></span>
</div>


<div class="card border-secondary" id="new-reg-user" >
  <div class="card-header text-center" id="new-header-reg-user">
    <%= link_to root_path do %>
      <%= image_tag "logo.png", class: "logo-sign" %>
    <% end %><br>
    <%= t('.title') %></div>
  <div class="card-body text-secondary">
    <div class="card-text">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: {class: 'registration'}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email, class: "hidden" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control op-80', placeholder: "User email" %>
        </div>

        <div class="form-group mt-2">
          <%= f.label :first_name, class: "hidden" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control op-80', placeholder: "First name" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, class: "hidden" %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control op-80', placeholder: "Last name" %>
        </div>

        <div class="form-group">
          <%= f.label :login, class: "hidden" %><br>
          <%= f.text_field :login, id: :user_login, class: 'form-control op-80', placeholder: "Login" %>
        </div>

        <div class="form-group signin-password mt-2">
          <%= f.label :password, class: "hidden" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control op-80", placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
          <%= octicon 'check', class: "password-success hide", style: "fill: green; height: 16px !important; width: 10px !important;" %>
        </div>

        <div class="form-group signin-password_confirm">
          <%= f.label :password_confirmation, class: "hidden" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control op-80", placeholder: "Password confirmation" %>
          <%= octicon 'alert', class: "password-alert hide", style: "fill: red; height: 16px !important; width: 10px !important;" %>
          <%= octicon 'check', class: "password-success hide", style: "fill: green; height: 16px !important; width: 10px !important;" %>
        </div>

        <button class="signin-button mt-4" type="submit">
          <%= t('.sign_up') %>
        </button>

    <% end %>

      <div style="margin: 3% 18% 4% 18%;">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
