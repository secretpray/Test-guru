<h1>Test: <%= @test.title %></h1>
<p>
  <%= link_to 'New question >', new_test_question_path(@test) %>
</p>
<p><strong>Title: </strong><%= @test.title %></p>
<p><strong>Level: </strong><%= test_level(@test) %></p>
<p><strong>Category: </strong><%= @test.category.title %></p>

<p>
  <strong>'<%=@test.title%>' test have</strong> <%=pluralize(@test.questions.count, 'question') %>:
</p>

<ul><% @test.questions.each do |question| %>
  <li><%= link_to question.body, question_path(question) %></li>
  <% end %>
</ul>

<%= link_to '< Back', tests_path %> |
<%= link_to 'Edit test', edit_test_path(@test) %> |
<%= link_to 'Delete test', test_path(@test), method: :delete, data: { confirm: 'Are you sure?'} %> 



