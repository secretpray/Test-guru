<%= form_with(model: [:admin, @test, @question], local: true) do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <div class="form-group mt-3">
    <%= form.label :question, id: :body, class: 'label-tweak1' %><br>
    <%= form.text_area :body, id: :question_body, cols: 44, rows: 4, class: 'form-control' %>
  </div>

    <div class="btn-group mt-3 grid-two-card" role="group">
      <button type="button" class="btn btn-light ml-2 mr-2" id="back-tests" >
        <%= link_to t('.back'), admin_test_path(@question.test) %>
      </button>
      <button type="submit" class="btn btn-light mr-2 ml-2" id="create-test">
        <%= button_select(@question) %>
      </button>
    </div>
<% end %>
