<%= render 'shared/sidebar' %>

<div class="menu-icon" id="menu-icon-tl" >
  <span></span>
  <span></span>
  <span></span>
</div>

<div class="col justify-content-center table-container-card">

  <h1 class="row justify-content-center">
    <span class="user-tests-text text-center mt-3"><%= t('.title') %>: <%= @question.test.title %></span>
  </h1>
  <div class="ml-5"><strong class="text-uppercase"><%= t('.question') %>: </strong>
    <span class="text-capitalize"><%= @question.body %></span>
  </div>

  <table class="table mt-4">
    <thead class="table-dark">
      <tr class="tr">
        <th class="cell"><%= t('.answer') %></th>
        <th class="cell"><%= t('.correctly') %></th>
        <th colspan="3" class="cell" style="text-align: center"><%= t('.action') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @question.answers %>
    </tbody>
  </table>

  <div class="row justify-content-center">
    <button type="button" class="col-md-3 btn btn-neu-card mt-4 mb-3" id="hover-red">
      <%= link_to t('.back'), admin_test_path(@question.test) %>
    </button>
    <button type="button" class="col-md-3 btn btn-neu-card mt-4 mb-3">
      <%= link_to t('.new_answer'), new_admin_question_answer_path(@question) %>
    </button>
  </div>

</div>
