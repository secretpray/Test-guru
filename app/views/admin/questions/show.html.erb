<h1><%= t('.title') %>: <%= @question.test.title %></h1>

<p>
  <strong><%= t('.question') %>:</strong>
  <%= @question.body %>
</p>

<h2><%= t('.answers') %>:</h2>

<%= link_to t('.new_answer'), new_admin_question_answer_path(@question) %>
<br><br>
<table>
  <tr>
    <th><%= t('.answer') %></th>
    <th><%= t('.correctly') %></th>
    <th colspan="3"><%= t('.action') %></th>
  </tr>
    <%= render @question.answers %>
</table>
<br>
<%= link_to t('.back'), admin_test_path(@question.test) %>


