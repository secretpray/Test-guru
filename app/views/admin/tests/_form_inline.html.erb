<%= form_with model: [:admin, test],
              url: update_inline_admin_test_path(test),
              local: true,
              class: 'form-inline hide row',
              data: { test_id: test.id, turbolink: false } do |form| %>
  <%= form.text_field :title, class: 'form-control col my-2 mr-2' %>
  <%= form.submit t('.submit'), class: 'col-sm-2 btn btn-primary my-2' %>
<% end %>
