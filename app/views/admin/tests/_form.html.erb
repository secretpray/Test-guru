<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <div class="form-group mt-3">
    <%= form.label :title %><br>
    <%= form.text_field :title , id: :test_title, size: '20x1', class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :level %><br>
    <%= form.number_field :level, id: :test_level, in: 0..100, class: 'form-control' %>
  </div>

  <div class="form-group col-md-4 mt-3">
    <%= form.label :category_id %>:
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true, class: 'form-control' %>
  </div>

  <button class="btn btn-outline-secondary mt-3 ml-4" type="reset" >
        <%= link_to t('test_passages.result.back'), admin_tests_path, style: "text-decoration: none; color: #6c757d;" %> </button>
  <button class="btn btn-outline-secondary mt-3" type="submit">
    <%= button_select(@test) %></button>
<% end %>
