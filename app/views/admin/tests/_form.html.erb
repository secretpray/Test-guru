<h2><%= test_header(@test) %></h2>

<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title , id: :test_title, size: '20x1' %>
  </div>

  <div>
    <%= form.label :level %><br>
    <%= form.number_field :level, id: :test_level, in: 0..100 %>
  </div>

  <div>
    <%= form.label :category_id %>:
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </div>

  <%#  = form.hidden_field :author_id, value: current_user.id %>

  <p><%= form.submit %></p>
<% end %>
