<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <div class="form-group mt-3 tests-form-text-field">
    <%= form.label :title, class: "title-label" %><br>
    <%= form.text_field :title , id: :test_title, size: '20x1', class: 'form-control' %>
  </div>

  <div class="form-group mt-3 tests-form-number-field">
    <%= form.label :level, class: "level-label" %><br>
    <%= form.number_field :level, id: :test_level, in: 0..100, class: 'form-control' %>
  </div>

  <div class="form-group mt-4">
    <%= form.label :category_id, class: "control-label hidden" %>
    <%= form.collection_select(:category_id, Category.all, :id, :title, { prompt: true }, { class: 'form-control input-group-prepend' }) %>
  </div>

  <div class="row">
    <div class="btn-group mt-4 mb-1" role="group" aria-label='test create group'>

      <button type="button" class="btn btn-light mr-2" id="back-tests">
        <%= link_to t('test_passages.result.back'), admin_tests_path%>
      </button>

      <button type="submit" class="btn btn-light ml-2" id="create-test">
        <%= button_select(@test) %>
      </button>
    </div>
  </div>

<% end %>
