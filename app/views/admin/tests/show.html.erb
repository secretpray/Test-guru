<div class="row justify-content-center mt-3">
  <div class="col col-md-8">
    <div class="container">
      <h1 class="row justify-content-center"><%= t('.title') %>: <%= @test.title %></h1>
      <div class="ml-5 font-weight-bold"><strong><%= t('admin.tests.index.level') %>: </strong><%= test_level(@test) %></div>
      <div class="ml-5 font-weight-bold"><strong><%= t('admin.tests.index.category') %>: </strong><%= @test.category.title %></div>
      <div class="ml-5 font-weight-bold"><strong><%= t('admin.tests.index.author') %>: </strong><%= @test.author.login %></div>
      <table class="table mt-4">
        <thead class="table-dark">
          <tr>
            <th><%= t('.question') %></th>
            <th style="text-align: center"><%= t('.answers') %></th>
            <th colspan="3" style="text-align: center"><%= t('.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @test.questions %>
        </tbody>
      </table>
      <button type="button" class="btn btn-light mt-4 mb-3">
        <%= link_to t('test_passages.result.back'), admin_tests_path, style: "text-decoration: none; color: #6c757d;" %> </button>
      <button type="button" class="btn btn-light mt-4 mb-3">
        <%= link_to t('.new_question'), new_admin_test_question_path(@test), style: "text-decoration: none; color: #6c757d;" %></button>
    </div>
  </div>
</div>



