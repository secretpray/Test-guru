<h1><%= t('.title') %>: <%= @test.title %></h1>

<p><strong><%= t('admin.tests.index.title') %>: </strong><%= @test.title %></p>
<p><strong><%= t('admin.tests.index.level') %>: </strong><%= test_level(@test) %></p>
<p><strong><%= t('admin.tests.index.category') %>: </strong><%= @test.category.title %></p>
<p><strong><%= t('admin.tests.index.author') %>: </strong><%= @test.author.login %></p>
<p><strong><%= t('admin.tests.index.questions') %>: </strong><%= @test.questions.count %></p>
<p>
<%= link_to t('.new_question'), new_admin_test_question_path(@test) %>
</p>
<table>
  <tr>
    <th><%= t('.question') %></th>
    <th><%= t('.answers') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </tr>

   <%= render @test.questions %>

</table>
