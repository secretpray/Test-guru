<div class="container w-75 p-3">
  <div class="row">
    <div class="col justify-content-center ">
      <h1 class="text-center mt-3 mb-4"><%= t('.header') %></h1>
        <table class="table">
          <thead class="table-dark">
            <tr>
              <th scope="col"><%= t('.title') %></th>
              <th scope="col"><%= t('.level') %></th>
              <th scope="col"><%= t('.category') %></th>
              <th scope="col"><%= t('.author') %></th>
              <th scope="col" style="text-align: center"><%= t('.questions') %></th>
              <th scope="col" colspan="4" style="text-align: center"><%= t('.actions') %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @tests %>
          </tbody>
        </table>
      <button type="button" class="btn btn-warning mt-3">
        <%= link_to t('.create'), new_admin_test_path, style: "text-decoration: none; color: #6c757d;" %>
      </button>
      <button type="button" class="btn btn-info mt-3">
        <%= link_to t('.gist'), admin_gists_path, style: "text-decoration: none; color: #fff;" %>
      </button>
    </div>
  </div>
</div>
