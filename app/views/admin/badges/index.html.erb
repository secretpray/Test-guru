<%= render 'shared/sidebar' %>

<div class="menu-icon" id="menu-icon-tl" >
  <span></span>
  <span></span>
  <span></span>
</div>

<div class="col justify-content-center table-container">

  <h1 class="text-center mt-3 mb-4">
    <span class="admin-tests-text"><%= t('badges.index.header')%></span>
  </h1>
  <%= render 'shared/errors', resource: @badge %>

  <table class="table">
    <thead class="table-dark">
      <tr>
        <th scope="col" class="text-center cell" style="width: 110px;"><%= t('badges.index.badge_image') %></th>
        <th scope="col" class="cell"><%= t('badges.index.badge_title') %></th>
        <th scope="col" class="text-center cell"><%= t('badges.index.badge_rule') %></th>
        <th colspan="3"class="text-center cell"><span class="neon"><%= t('badges.index.badge_action') %></span></th>
      </tr>
    </thead>
    <tbody>

      <%= render @badges %>

    </tbody>
  </table>

  <div class="row justify-content-center">
    <button type="button" class="col-md-3 btn btn-neu-card mt-2 mb-3" id="hover-red">
      <%= link_to t('badges.index.go_back'), root_path %>
    </button>
    <button type="button" class="col-md-3 btn btn-neu-card mt-2 mb-3">
      <%= link_to t('badges.index.new_badge'), new_admin_badge_path %>
    </button>
  </div>

</div>
