<%= form_with model: [:admin, badge],
              url: update_inline_admin_badge_path(badge),
              local: true,
              class: "form-inline-badge hide",
              data: {badge_id: badge.id, turbolink: false} do |form| %>
  <%= form.text_field :title, class: 'form-control mr-2' %>
  <%= form.submit t('.submit'), class: 'btn btn-primary' %>
<% end  %>
