
<%= form_with(model: [:admin, @question, @answer], local: true) do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <div class="form-group">
    <%= form.label :body, class: 'label-tweak2' %><br>
    <%= form.text_area :body, id: :answer_body, cols: 40, rows: 5, class: 'form-control' %>

    <div class="form-group mt-2" id="checkbox-inline">
      <%= form.check_box :correct %>
      <%= form.label :correct, id: :answer_correct, class: 'form-check-label' %>
    </div>

    <div class="btn-group btn-center-area" role="group">
      <button type="reset" class="btn btn-light ml-2 mr-2" id="back-tests" >
        <%= link_to t('.back'), admin_question_path(@answer.question) %>
      </button>

      <button type="submit" class="btn btn-light mr-2 ml-2" id="create-test" >
        <%= button_select(@answer) %>
      </button>
    </div>

  </div>

 <% end %>
